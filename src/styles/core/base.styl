@import "vars.styl"
html
  box-sizing border-box
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

*, *:before, *:after
  box-sizing border-box

html, body
  background-color $background
  color $black
  size 100%
  min-height 100%
  min-width 100%
  margin 0
  padding 0
  font-family $text-font

#app
  size 100%
  min-width 100%
  min-height 100%
  display block
  text-align center
  &:before
    position absolute
    size 1px 100%
    content " "
    display block
    background-color $black
    left 16%
    top 0
  &:after
    position absolute
    size 1px 100%
    content " "
    background-color $black
    display: block
    right 16%
    top 0

main
  size 100%
  &:before
    position absolute
    display block
    content " "
    background-color $black
    size 16% 1px
    top 50%
    left: 0
  &:after
    position absolute
    display block
    content " "
    background-color $black
    size 16% 1px
    top 50%
    right: 0

.section
  size 100%
  &:before
    position absolute
    display block
    content " "
    background-color $primary
    size 42px 3px
    top 50%
    left 16%
    transform translateX(-100%)
  &:after
    position absolute
    display block
    content " "
    background-color $primary
    size 42px 3px
    top 50%
    right 16%
    transform translateX(100%)
  h2
    overflow hidden
    position relative
    top 50%
    transform translateY(-50%)
    margin 0
    color $primary
    font-size 135px
    font-weight 700
